<% path = request.env['PATH_INFO'] %>

<div class="navbar-mobile ui simple inverted fluid selection dropdown">
  <input type="hidden" name="menu">
  <i class="navbar-dropdown-icon-mobile dropdown icon"></i>
  <div class="navbar-image-mobile default text"><%= image_tag 'scuttlescrims-logo.png' %></div>
  <div class="menu">

    <% if path == "/" %>
      <div class="navbar-button-mobile-active item"><a onclick="window.location.href='/'">Home</a></div>
    <% else %>
      <div class="navbar-button-mobile item" ><a onclick="window.location.href='/'">Home</a></div>
    <% end %>

    <% if user_signed_in? %>
      <% if path == "/teams" %>
        <a class="navbar-button-mobile-active item" onclick="window.location.href='/teams'">Team Manager</a>
      <% else %>
        <a class="navbar-button-mobile item" onclick="window.location.href='/teams'">Team Manager</a>
      <% end %>

      <% if path == "/users/edit" || path == "/users" %>
        <%= link_to "Edit Account", edit_user_registration_path, class: "navbar-button-mobile-active item" %>
      <% else %>
        <%= link_to "Edit Account", edit_user_registration_path, class: "navbar-button-mobile item" %>
      <% end %>

      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "navbar-button-mobile-last item" %>

    <% else %>

      <% if path == "/users/sign_in" %>
        <%= link_to "Log In", new_user_session_path, class: "navbar-button-mobile-active item" %>
      <% else %>
        <%= link_to "Log In", new_user_session_path, class: "navbar-button-mobile item" %>
      <% end %>

      <% if path == "/users/sign_up" || path == "/users" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "navbar-button-mobile-last-active item" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "navbar-button-mobile-last item" %>
      <% end %>

    <% end %>
  </div>
</div>
