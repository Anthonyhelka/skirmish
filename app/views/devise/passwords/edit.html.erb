<div class="devise-container-<%= detect_device %> ui raised segment">
  <div class="devise-image"><%= image_tag 'scuttlecrab.png' %></div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="devise-fields-container ui form">
      <div class="devise-fields"><br />
        <div class="devise-field field">
          <%= f.label :password, "New Password" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="devise-field field">
          <%= f.label :password_confirmation, "Confirm New Password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    </div>

    <div class="devise-button-container">
      <%= f.button "Update Password", type: :submit, class: "devise-button ui primary button" %>
    </div>
  <% end %>

  <% if resource.errors.any? %>
    <div class="flash-error-message-container">
      <div class="ui negative message flash-error-message">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
    </div>
  <% end %>
</div>

<div class="devise-shared-links">
  <%= render "devise/shared/links" %>
</div>
